<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Friend System Debug Tools"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/textViewUserInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loading user info..."
        android:background="#f0f0f0"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/buttonSimulateRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simulate Incoming Friend Request"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/buttonCreateSearchableUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Searchable Test User"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/buttonRefreshUserInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Refresh User Info"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/buttonClearDebugData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear Debug Data"
        android:backgroundTint="#ff6b6b" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instructions:\n\n1. Use 'Simulate Incoming Friend Request' to create fake friend requests\n2. Use 'Create Searchable Test User' to add users you can search for\n3. Test accepting/declining requests in the Friends tab\n4. Test searching and sending requests"
        android:layout_marginTop="16dp"
        android:textSize="12sp"
        android:background="#e8f4f8"
        android:padding="8dp" />

</LinearLayout>
