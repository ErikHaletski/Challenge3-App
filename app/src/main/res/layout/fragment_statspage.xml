<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.stats.StatspageFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/mainContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Stats Grid -->
            <GridLayout
                android:id="@+id/statsGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="100dp">

                <Button
                    android:id="@+id/buttonMight"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:text="Might" />

                <Button
                    android:id="@+id/buttonMind"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:text="Mind" />

                <Button
                    android:id="@+id/buttonHeart"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:text="Heart" />

                <Button
                    android:id="@+id/buttonSpirit"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:text="Spirit" />
            </GridLayout>

            <!-- Detail View -->
            <LinearLayout
                android:id="@+id/detailView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:id="@+id/buttonBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="← Back" />

                <TextView
                    android:id="@+id/textMainStat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Main Stat"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/substatsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:paddingStart="24dp">

                    <!-- Dynamically add substat TextViews here -->
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

