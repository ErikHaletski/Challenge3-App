<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.stats.StatspageFragment"
    tools:visibility="visible">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/mainContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- Stats Grid -->
            <GridLayout
                android:id="@+id/statsGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="100dp"
                android:columnCount="2"
                android:rowCount="2"
                android:visibility="visible">

                <Button
                    android:id="@+id/buttonMight"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:text="Might" />

                <Button
                    android:id="@+id/buttonMind"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:text="Mind" />

                <Button
                    android:id="@+id/buttonHeart"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:text="Heart" />

                <Button
                    android:id="@+id/buttonSpirit"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:text="Spirit" />
            </GridLayout>

            <!-- Detail View -->
            <LinearLayout
                android:id="@+id/detailView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:id="@+id/buttonBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â† Back" />

                <TextView
                    android:id="@+id/textMainStat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Main Stat"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/mightSubstats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="24dp"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/buttonStrength"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Strength" />

                    <LinearLayout
                        android:id="@+id/strengthFoundation"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <Button
                            android:id="@+id/ArmStrength"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:insetLeft="12dp"
                            android:text="Arm Strength" />

                        <Button
                            android:id="@+id/LegStrength"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:insetLeft="12dp"
                            android:text="Leg Strength" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/buttonEndurance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Endurance" />

                    <LinearLayout
                        android:id="@+id/enduranceFoundation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"></LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/mindSubstats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="24dp"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/buttonIntelligence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Intelligence" />

                    <Button
                        android:id="@+id/buttonWisdom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wisdom" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/spiritSubstats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="24dp"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/buttonWillpower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Willpower" />

                    <Button
                        android:id="@+id/buttonResilience"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resilience" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/heartSubstats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="24dp"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/buttonCompassion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Compassion" />

                    <Button
                        android:id="@+id/buttonCharisma"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Charisma" />
                </LinearLayout>

                <!-- Dynamically add substat TextViews here -->
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

