<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="de.challenge3.questapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_achievements"
        android:name="de.challenge3.questapp.ui.achievements.AchievmentsFragment"
        android:label="@string/title_achievements"
        tools:layout="@layout/fragment_achievments" />

    <fragment
        android:id="@+id/navigation_activity"
        android:name="de.challenge3.questapp.ui.activity.ActivityFragment"
        android:label="@string/title_activity"
        tools:layout="@layout/fragment_activity" />
    <fragment
        android:id="@+id/navigation_friendlist"
        android:name="de.challenge3.questapp.ui.friendlist.FriendlistFragment"
        android:label="@string/title_friendlist"
        tools:layout="@layout/fragment_friendlist" />
    <fragment
        android:id="@+id/navigation_statspage"
        android:name="de.challenge3.questapp.ui.stats.StatspageFragment"
        android:label="@string/title_statspage"
